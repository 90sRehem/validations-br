{
  "name": "validations-br",
  "version": "1.0.0",
  "description": "A validator to BR informations",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/AZagatti/validations-br.git",
  "homepage": "https://github.com/AZagatti/validations-br#readme",
  "author": "Reactivando <reactivando2@gmail.com>",
  "keywords": [
    "BR",
    "Brazil",
    "Validator"
  ],
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
